#!/usr/bin/env ruby

require 'butcher'
require 'optparse'

options = {}
parser = OptionParser.new do |opts|
  opts.banner = "Usage: stab [options] node_name"

  opts.on('-h', '--help', 'Display this screen') do
    puts opts
    exit
  end

  #opts.on("-v", "--[no-]verbose", "Run verbosely") do |v|
  #  options[:verbose] = v
  #end
end
parser.parse!

if ARGV == []
  puts parser
  exit
end

Butcher::Stab::CLI.new.run(ARGV)